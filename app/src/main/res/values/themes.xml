<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PartiCours" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkBlue</item>
        <item name="colorPrimaryVariant">@color/darkBlue</item>
        <item name="colorOnPrimary">@color/blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightBlue</item>
        <item name="colorSecondaryVariant">@color/lightBlue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->

        <item name="android:spinnerItemStyle">@style/DefaultTextStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/DefaultTextStyle</item>
    </style>

    <style name="ActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkBlue</item>
        <item name="colorPrimaryVariant">@color/darkBlue</item>
        <item name="colorOnPrimary">@color/blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightBlue</item>
        <item name="colorSecondaryVariant">@color/lightBlue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->

        <item name="android:spinnerItemStyle">@style/DefaultTextStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/DefaultTextStyle</item>
    </style>

    <!-- Texte par défaut -->
    <style name="DefaultTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/kanit</item>
    </style>

    <!-- Texte de description par défaut -->
    <style name="DefaultDescriptionTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/gray</item>
    </style>

    <!-- Texte de login par défaut -->
    <style name="DefaultLoginTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Sous titre par défaut -->
    <style name="DefaultSubtitleStyle" parent="DefaultTextStyle">
        <item name="android:fontFamily">@font/kanit_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Titre par défaut -->
    <style name="DefaultTitleStyle" parent="DefaultSubtitleStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Theme.PartiCours.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PartiCours.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PartiCours.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>